{
  "manifest_version": 3,
  "name": "Amazon Order Extractor",
  "description": "Export Amazon order history into CSV files and download matching invoices.",
  "version": "0.1.1",
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png",
      "256": "icons/icon-256.png"
    },
    "default_title": "Amazon Order Extractor",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["activeTab", "storage"],
  "optional_permissions": ["downloads", "notifications"],
  "host_permissions": [
    "https://amazon.in/*",
    "https://www.amazon.in/*",
    "https://amazon.com/*",
    "https://www.amazon.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://amazon.in/gp/css/order-history*",
        "https://amazon.in/gp/your-account/order-history*",
        "https://amazon.in/*/order-history*",
        "https://amazon.in/your-orders*",
        "https://www.amazon.in/gp/css/order-history*",
        "https://www.amazon.in/gp/your-account/order-history*",
        "https://www.amazon.in/*/order-history*",
        "https://www.amazon.in/your-orders*",
        "https://amazon.com/gp/css/order-history*",
        "https://amazon.com/gp/your-account/order-history*",
        "https://amazon.com/*/order-history*",
        "https://amazon.com/your-orders*",
        "https://www.amazon.com/gp/css/order-history*",
        "https://www.amazon.com/gp/your-account/order-history*",
        "https://www.amazon.com/*/order-history*",
        "https://www.amazon.com/your-orders*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": [
        "https://www.amazon.in/*",
        "https://www.amazon.com/*",
        "https://www.amazon.ca/*",
        "https://www.amazon.co.uk/*"
      ]
    }
  ]
}
